<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title - @DtuNetbank.ResourceManager.GetResourceString("AppName")</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            
            @Html.ActionLink(DtuNetbank.ResourceManager.GetResourceString("AppName"), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink(DtuNetbank.ResourceManager.GetResourceString("Accounts"), "Index", "BankAccount", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink(DtuNetbank.ResourceManager.GetResourceString("AddAccount"), "RegisterBankAccount", "BankAccount", null, new { @class = "nav-link" })</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                         </ul>
                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Jimmy, Mohammad, Asger</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>